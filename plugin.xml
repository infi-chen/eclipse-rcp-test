<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="viewtest.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="viewtest.Perspective"
            id="ViewTest.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="ViewTest.application"
            name="Hello RCP">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
               name="appName"
               value="Hello RCP">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="viewtest.HelloView"
            id="ViewTest.HelloView"
            name="HelloView"
            restorable="true">
      </view>
      <view
            class="viewtest.ExtensionsView"
            id="ViewTest.ExtensionsView"
            name="ExtensionsView"
            restorable="true">
      </view>
      <view
            class="viewtest.CanvasView"
            id="ViewTest.CanvasView"
            name="CanvasView"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="Platform">
            <command
                  commandId="viewtest.Handler.ShowBundles"
                  label="Show Bundles"
                  style="push">
            </command>
            <command
                  commandId="viewtest.Handler.ShowExtensions"
                  label="show Extensions"
                  style="push">
            </command>
            <separator
                  name="separator"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="ViewTest.CanvasView"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.views.ResourceNavigator">
         </view>
         <view
               id="ViewTest.HelloView"
               minimized="false"
               relationship="bottom"
               relative="org.eclipse.ui.views.ResourceNavigator">
         </view>
         <view
               id="ViewTest.ExtensionsView"
               minimized="false"
               relationship="bottom"
               relative="org.eclipse.ui.views.ResourceNavigator">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="viewtest.Handler.ShowExtensions"
            id="viewtest.Handler.ShowExtensions"
            name="ShowExtensions">
      </command>
      <keyBinding
            commandId="viewtest.Handler.ShowExtensions"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration"
            keySequence="M1+D">
      </keyBinding>
      <command
            defaultHandler="viewtest.Handler.ShowBundles"
            id="viewtest.Handler.ShowBundles"
            name="ShowBundles">
      </command>
      <keyBinding
            commandId="viewtest.Handler.ShowBundles"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration"
            keySequence="M1+B">
      </keyBinding>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="viewtest.Handler.ShowExtensions"
            commandId="viewtest.Handler.ShowExtensions">
      </handler>
      <handler
            class="viewtest.Handler.ShowBundles"
            commandId="viewtest.Handler.ShowBundles">
      </handler>
   </extension>

</plugin>
